     <div class="col-lg-9 col-10 bg-danger color-bg">
       <div class="main1 row">
        <div class="col-lg-8 color-bg">
          <%= yield %>
        </div>
        <div class=" col-lg-4 color-bg">
          <div class="row">
        <div class="row col-12 color-bg">
      
            <div class="col-12 bg-dark">
              <%= image_tag @user.profile_photo_url, width: '100%', class:' profile-image' %>
            </div>
            <div class="col-12 ">
              <div class="row bg-secondary">
              <div class="col-4" >
tweets <%= tweets(@user)%>
              </div>
              <div class="col-4">
followed <%= followed(@user) %>
              </div>
              <div class="col-4">
followers  <%= followers(@user) %>
              </div>
              </div>
            </div>

         
        </div>
        <div class="col-12 color-bg">
        <h2 class="text-center followe_title">who to follow</h2> 
         
         <% User.all.each  do |user| %>
    
            <div class="container row ">
              <% if current_user.id != user.id && !current_user.followings.where(followed_id: user.id).any? %>
              <div class="col-2">
                <%= image_tag user.profile_photo_url, width: '32px', class:'followee-image' %><br>
              </div>
              <div class="row col-8">
                <div class="col-12 followe_name">
                  <%= user.fullname %> 
                </div>
                <div class="col-12 followe_email">
                  <%= user.email %> 
                </div>
              </div>
         
              <div class="col-2">
                <%= link_to 'follow', followings_path(user), method: :post %>
              </div>
              <% end %>
          </div>
          <br>
           
            <% end %>
          </ul>
        </div>
